<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quaere.deepak.quaereshinecity.RedeemFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText android:imeOptions="actionNext"
                android:singleLine="true"
                android:ems="10"
                android:maxLength="16"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:id="@+id/edt_privilegecard_no"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recta_edittext"
                android:hint="Privilege Card No."/>
            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView
                android:text="Balance : "

                android:id="@+id/txt_balance1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="16dp"/>
            <TextView
                android:text="0.00"
                android:id="@+id/txt_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="16dp"/>
            </LinearLayout>
            <EditText
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:ems="10"
                android:layout_marginTop="20dp"
                android:id="@+id/edt_invoice_no"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recta_edittext"
                android:hint="Invoice No."/>
            <EditText android:imeOptions="actionDone"
                android:singleLine="true"
                android:ems="10"
                android:inputType="number"
                android:layout_marginTop="20dp"
                android:id="@+id/edt_amount"
                android:padding="10dp"
                android:textSize="16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/recta_edittext"
                android:hint="Amount"/>

            <Button
                android:id="@+id/proceed_btn"
                android:padding="10dp"
                android:textColor="@color/white"
                android:background="#383838"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_below="@id/linear1"
                android:layout_centerHorizontal="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Proceed"
                />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
