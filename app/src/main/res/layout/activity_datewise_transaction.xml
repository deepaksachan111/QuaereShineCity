<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    tools:context="com.quaere.deepak.quaereshinecity.DatewiseTransactionActivity"
   >
<LinearLayout
    android:layout_marginTop="20dp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
 <EditText
     android:focusableInTouchMode="false"
     android:id="@+id/edt_fromdate"
     android:padding="10dp"
     android:hint="Form Date"
     android:background="@drawable/recta_edittext"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content" />
    <EditText
        android:focusableInTouchMode="false"
        android:id="@+id/edt_todate"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:hint="To Date"
        android:background="@drawable/recta_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:focusableInTouchMode="false"
        android:id="@+id/edt_dropdown"
        android:layout_marginTop="10dp"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:ems="10"
        android:padding="10dp"
        android:hint="Transaction Type"
        android:background="@drawable/recta_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/datewise_seach"
        android:text="Search"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</RelativeLayout>
