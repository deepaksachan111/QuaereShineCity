<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
android:layout_height="match_parent"
    android:padding="10dp"
tools:context="com.quaere.deepak.quaereshinecity.Fragment.ChangePasscodeFragment">

<LinearLayout
    android:padding="10dp"
    android:id="@+id/linearLayoutchangepasscode"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <EditText
        android:fontFamily=" sans-serif-condensed-light"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_oldpasscode"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recta_edittext"
        android:hint="Old Passcode"/>

    <EditText
        android:inputType="textWebPassword"
        android:fontFamily=" sans-serif-condensed-light"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_newpasscode"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recta_edittext"
        android:hint="New Passcode"/>
    <EditText

        android:fontFamily=" sans-serif-condensed-light"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:ems="10"
        android:inputType="textWebPassword"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_confirmpasscode"
        android:padding="10dp"
        android:textSize="16sp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recta_edittext"
        android:hint="Confirm Passcode"/>
</LinearLayout>

    <Button

        android:id="@+id/btn_changepasscode_submit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayoutchangepasscode"
        android:layout_marginTop="25dp"
        android:background="@color/black"
        android:text="Submit"
        android:textColor="@color/white"
        android:typeface="sans"
        android:layout_gravity="center" />


</RelativeLayout>
