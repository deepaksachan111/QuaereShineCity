<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.quaere.deepak.quaereshinecity.Fragment.TrainingRegistration">

<LinearLayout
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/recta_edittext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <Spinner

        android:prompt="@string/select_training"
        android:ellipsize="marquee"
        android:id="@+id/my_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <EditText
        android:fontFamily=" sans-serif-condensed-light"
        android:imeOptions="actionNext"
        android:singleLine="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:id="@+id/edt_membername"
        android:padding="10dp"
        android:textSize="16sp"
        android:background="@drawable/recta_edittext"
        android:hint="Member Name"

        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:fontFamily=" sans-serif-condensed-light"
        android:imeOptions="actionDone"
        android:maxLength="10"
        android:singleLine="true"
        android:ems="10"
        android:id="@+id/edt_membermobile_no"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="phone"
        android:background="@drawable/recta_edittext"
        android:hint="Mobile No."
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_register"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:text="Register"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>

</FrameLayout>
